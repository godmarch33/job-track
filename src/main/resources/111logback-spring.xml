<configuration>    <!-- Async Appender -->    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">        <appender-ref ref="CONSOLE"/>    </appender>    <!-- Console Appender -->    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">        <encoder>            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>        </encoder>    </appender>    <!-- Logger configuration -->    <root level="INFO">        <appender-ref ref="ASYNC"/>    </root></configuration>